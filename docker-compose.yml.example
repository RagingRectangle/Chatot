version: "3.7"

services:
  chatot:
    container_name: Chatot
    restart: unless-stopped
    build: ./Chatot
    volumes:
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro
      - ./Chatot/config.json:/usr/src/app/config.json
      - ./Chatot/custom/local.json:/usr/src/app/custom/local.json

    # If applicable, add your Poracle network here and uncomment
    # networks:
      # - network-name